<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:weightSum="1"
	android:background="@drawable/background1">


	<LinearLayout android:layout_height="45dp"
		android:layout_width="fill_parent" android:background="#404040"
		android:weightSum="1">
		<TextView android:textColor="#C0C0C0" android:layout_height="match_parent"
			android:layout_marginLeft="90dp" android:layout_marginTop="10dp"
			android:id="@+id/ltcu" android:text="Welcome to Lets catch up"
			android:textSize="18dp" android:layout_width="230dp"></TextView>
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginTop="20dp" android:layout_marginLeft="20dp">

		<TextView android:textSize="16dp" android:textColor="#000000"
			android:layout_height="35dp" android:layout_width="190dp"
			android:layout_weight="0.04" android:id="@+id/notRegisteredText"
			android:text="Not yet registered?"></TextView>
		<Button android:layout_weight="0.04" android:layout_marginLeft="20dp"
			android:layout_height="40dp" android:layout_width="130dp"
			android:text="Register" android:id="@+id/RegisterButton"></Button>
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_marginTop="25dp" android:layout_marginLeft="20dp" android:layout_height="wrap_content" android:layout_weight="0.09">
		<TextView android:textSize="16dp" android:textColor="#000000"
			android:id="@+id/HaveAccountText" android:layout_height="35dp"
			android:layout_width="190dp" android:text="Already have an account?"
			android:layout_weight="0.15"></TextView>
		<Button android:layout_weight="0.04" android:layout_marginLeft="20dp"
			android:layout_height="40dp" android:layout_width="130dp"
			android:text="Signin" android:id="@+id/SigninButton"></Button>
	</LinearLayout>
	<Button android:layout_marginLeft="120dp"
	android:background="@drawable/ic_menu_onoff"
		android:layout_marginTop="30dp" android:id="@+id/cancelRegisterSigninButton"
		android:text="" android:layout_height="57dp" android:layout_width="95dp"></Button>

</LinearLayout>
