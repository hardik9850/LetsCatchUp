<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:weightSum="1"
  android:background="@drawable/background1">
    <LinearLayout android:layout_width="410dp" android:layout_marginTop="25dp" android:orientation="vertical" android:layout_marginLeft="10dp" android:layout_height="230dp">
        <LinearLayout android:layout_width="wrap_content" android:layout_marginTop="25dp" android:orientation="horizontal" android:layout_marginLeft="60dp" android:layout_height="wrap_content">
            <TextView android:layout_marginLeft="3dp" android:layout_height="40dp" android:textColor="#FFFFFF" android:layout_width="76dp" android:text="Username" android:id="@+id/SigninUsernameText" android:textSize="16dp"></TextView>
            <EditText android:layout_marginLeft="12dp" android:layout_height="40dp" android:layout_width="150dp" android:hint="Required" android:id="@+id/loginEditUsername" android:layout_weight="0.06">
                <requestFocus></requestFocus>
            </EditText>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_marginTop="10dp" android:orientation="horizontal" android:layout_marginLeft="60dp" android:layout_height="wrap_content">
            <TextView android:layout_marginLeft="3dp" android:layout_height="40dp" android:textColor="#FFFFFF" android:layout_width="76dp" android:text="Password" android:layout_marginTop="11dp" android:layout_weight="0.08" android:id="@+id/SigninPasswordText" android:textSize="16dp"></TextView>
            <EditText android:layout_weight="0.08" android:inputType="textPassword" android:layout_marginLeft="12dp" android:layout_height="40dp" android:layout_width="150dp" android:hint="Required" android:layout_marginTop="10dp" android:id="@+id/loginEditPassword"></EditText>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_marginTop="10dp" android:orientation="horizontal" android:layout_marginLeft="60dp" android:layout_height="wrap_content">
            <Button android:id="@+id/loginButton" android:layout_height="42dp" android:onClick="onClick" android:layout_width="90dp" android:layout_marginTop="20dp" android:text="Login"></Button>
            <Button android:id="@+id/loginScreenCancelbutton" android:layout_marginLeft="15dp" android:layout_height="42dp" android:layout_width="90dp" android:layout_marginTop="20dp" android:text="Cancel"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>